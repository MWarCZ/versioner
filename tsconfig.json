{
   "compilerOptions": {
    "outDir": "dist/",
    "rootDir": ".",

    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom"],

    "moduleResolution": "node",
    "baseUrl": "src/",
	  "typeRoots": [
	    "node_modules/@types",
		  "src/types"
	  ],

    "declaration": true,
    // "declarationMap": true,
    // "sourceMap": true,
    // "composite": true,                     /* Enable project compilation */
    "removeComments": true,

    "strict": true,
    // "noImplicitAny": true,
    // "noImplicitReturns": true,
    // "noImplicitThis": true,
    //- "noUnusedParameters": true,
    //- "noUnusedLocals": true,
    // "strictFunctionTypes": true,
    // "strictNullChecks": true,
    // "strictPropertyInitialization": true,

    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "compileOnSave": false,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
	  ".git",
	  "tests"
  ]
}
